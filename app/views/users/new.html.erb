<div class="container">
  <div class="row">
    <h1 class="title">Enter a Link</h1>
  </div>
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6">
      <%= form_tag :action => "index" do %>
        <div class="form-group">
         <%= text_field_tag :insta_url, nil, class: "col-lg-12" %>
        </div>
        <p>Hint: https://www.instagram.com/hyejung_belle/</p>
        <div class="text-center">
          <%= submit_tag "Submit", class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>