
<div class="row">
    <div class="col-lg-12">
      <h1 class="title text-center">Comments Statistics</h1>
      <table width="1000" align="center" class="text-left">
        <tr>
          <td><h5>Number of Port:</h5><td>
          <td><h5> <%= @posts.length%></h5><td>
        </tr>
        <tr>
          <td><h5>From</h5><td>
          <td><h5><%=@posts[-1].date%></h5><td>
        </tr>
        <tr>
          <td><h5>To</h5><td>
          <td><h5><%=@posts[0].date%></h5><td>
        </tr>
        <tr>
          <td><h5>Total of Comments:</h5><td>
          <td><h5><%=@comment_count.sum%></h5><td>
        </tr>
        <tr>
          <td><h5>Average Score:</h5><td>
          <td><h5><%=@average_all%></h5><td>
        </tr>
         <tr>
          <td><h5>Highest Score:</h5><td>
          <td><h5><%=@max_all%></h5><td>
        </tr>
        <tr>
          <td><h5>URL:</h5><td>
          <td><a href="<%=@max_all_url%>"><h5><%=@max_all_url%></h5></a><td>
        </tr>
         <tr>
          <td><h5>Lowest Score:</h5><td>
          <td><h5><%=@min_all%></h5><td>
        </tr>
        <tr>
          <td><h5>URL:</h5><td>
          <td><a href="<%=@max_all_url%>"><h5><%=@min_all_url%></h5></a><td>
        </tr>
      </table>
    </div>
    
    <table align="center">
          <td><%= button_to "Download Basic Information", index_write_path(id: @id, type:"single"), class:  'btn btn-primary' %><td>
          <td><%= button_to "Download All Comments", index_write_path(id: @id, type:"all"), class:  'btn btn-primary' %><td>
          <td><%= button_to "Download All Comments By Rank", index_write_path(id: @id, type:"rank"), class:  'btn btn-primary' %><td>
    </table>
    <br></br>
    <div class="col-lg-12 form-group">
      <table class="table">
        <thead>
          <th>No</th>
          <th>Image</th>
          <th>Link</th>
          <th>Comments</th>
          <th>Lowest</th>
          <th>Highest</th>
          <th>Average</th>
        </thead>
        <tbody>
        <% i=0%>  
         <% @posts.each do |post|%>
          <tr>
            <td><%=i+1%></td>
            <td><%=link_to image_tag(post.image, height: '100', width: '100'), post.image %></td>
            <td><%=link_to "#{post.link}", post.link%></td>
            <td><%= @comment_count[i]%></td>
            <td><%= @min[i]%></td>
            <td><%= @max[i]%></td>
            <td><%= @average[i]%></td>
            <td align = "center">
            <%= link_to "<button class='btn btn-link'>View as normal</button>".html_safe , show_path(id: @id, post_id: post.id,type: "normal") %>
            <%= button_to "Download", index_single_path(id: @id, post_id: post.id, type:"normal"), class:  'btn btn-small'  %>
            </td> 
            <td>
            <%= link_to "<button class='btn btn-link'>View as rank</button>".html_safe , show_path(id: @id, post_id: post.id,type: "rank") %>   
            <%= button_to "Download", index_single_path(id: @id, post_id: post.id,type: "rank"), class:  'btn btn-small'  %>
            </td>
            <%i=i+1%>
          </tr>  
        <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>