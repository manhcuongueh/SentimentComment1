<div>
  <div class="row">
    <div class="col-lg-12 text-center">
      <h1 class="title">Comments</h1>
    </div>
    <div class="col-lg-12 form-group">
      <table class="table">
        <thead>
          <th>Username</th>
          <th>Content</th>
          <th>Score</th>
        </thead>
        <tbody>
        <% @comments.each do |cm|%>
          <tr>
            <td><%=cm.username%></td>
            <td><%=cm.body%></td>
            <td><%=cm.score%></td>
        <%end%>
          </tr>
 
        </tbody>
      </table>
    </div>
  </div>
</div>
