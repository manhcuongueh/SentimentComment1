
    <div class="col-lg-12 form-group">
    <h1 class="title text-center">Username: <%=@username%></h1>
    <br>
      <table class="table">
        <thead>
          <th>No</th>
          <th>Comments</th>
          <th>Score</th>
          <th>Link</th>
          <th>Image</th>
        </thead>
        <tbody>
         <% @Comments.each do |cm|%>
          <tr>
            <td><%=@Comments.index(cm)+1%></td>
            <td><%=cm.body%></td>
            <td><%=cm.score%></td>
            <td><%=link_to "#{@posts.find_by_id(cm.post_id)['link']}", @posts.find_by_id(cm.post_id)['link']%></td>
            <td><%=link_to image_tag(@posts.find_by_id(cm.post_id)['image'], height: '100', width: '100'), @posts.find_by_id(cm.post_id)['image'] %></td>
          </tr>  
        <%end%>
        </tbody>
      </table>
    </div>
  </div>
</div>